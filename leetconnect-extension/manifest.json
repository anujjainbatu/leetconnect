{
  "manifest_version": 3,
  "name": "LeetConnect",
  "version": "1.2.2",
  "description": "Connect with friends and track LeetCode progress together - view stats, get notifications, and stay motivated.",
  "permissions": [
    "storage",
    "notifications",
    "alarms",
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "128": "icons/icon128.png"
  },
  "host_permissions": [
    "https://leetcode-api-faisalshohag.vercel.app/*",
    "https://api.github.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  }
}